!include $(root)\build\config.nmake

# Rules.
#
.SUFFIXES: .cxx .exe .obj

.cxx.obj:
	$(CXX) $(CPPFLAGS) $(EXTRA_CPPFLAGS) $(CXXFLAGS) /c /TP $< /Fo$@

.obj.exe:
	$(LD) $(LDFLAGS) /OUT:$@ $** $(LIBS)
!if "$(POSTLD)" != ""
	$(POSTLD) $@ $** $(LIBS)
!endif
